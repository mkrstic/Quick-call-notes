<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AfterCallActivity"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="0dp">
    <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/aftercall_txt_header"
            android:text="Call ended"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@android:color/darker_gray"
     />-->

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aftercall_imageview_contact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_contact"
            android:visibility="visible"/>

    <ProgressBar
            android:id="@+id/aftercall_progressbar_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:indeterminate="true"
            style="@style/Widget.Sherlock.ProgressBar"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/aftercall_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#000"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:background="#7000"
            android:text="Contact name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/aftercall_imageview_contact"
            android:layout_alignRight="@+id/aftercall_imageview_contact"
            android:layout_alignBottom="@+id/aftercall_imageview_contact"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aftercall_imageview_end_call"
            android:layout_toRightOf="@+id/aftercall_imageview_contact"
            android:layout_alignTop="@+id/aftercall_imageview_contact"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_end_call"
            />

    <TextView
            android:id="@+id/aftercall_txt_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+381 22 2819254"
            android:layout_alignTop="@+id/aftercall_imageview_end_call"
            android:layout_alignBottom="@+id/aftercall_imageview_end_call"
            android:layout_toRightOf="@+id/aftercall_imageview_end_call"
            android:layout_marginLeft="2dp"
            android:gravity="left|center_vertical"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aftercall_imageview_call_time"
            android:layout_toRightOf="@+id/aftercall_imageview_contact"
            android:layout_below="@+id/aftercall_imageview_end_call"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_time"/>

    <TextView
            android:id="@+id/aftercall_txt_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="28.06.2013. 15:36"
            android:layout_toRightOf="@+id/aftercall_imageview_call_time"
            android:layout_alignTop="@+id/aftercall_imageview_call_time"
            android:layout_alignBottom="@+id/aftercall_imageview_call_time"
            android:layout_marginLeft="2dp"
            android:gravity="left|center_vertical"
            />


    <com.mkrstic.callnotes.com.mkrstic.callnotes.view.LinedEditText
            android:id="@+id/aftercall_edittext_note"
            android:layout_below="@+id/aftercall_txt_name"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:singleLine="false"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:hint="What have you been talking about?"
            />


</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".AfterCallActivity"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:weightSum="1.0">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35">


        <QuickContactBadge
                android:id="@+id/aftercall_quickcontactbadge_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />

        <ProgressBar
                android:id="@+id/aftercall_progressbar_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:indeterminate="true"
                style="@style/Widget.Sherlock.ProgressBar"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="vertical"
                android:layout_alignLeft="@+id/aftercall_quickcontactbadge_contact"
                android:layout_alignRight="@+id/aftercall_quickcontactbadge_contact"
                android:layout_alignBottom="@+id/aftercall_quickcontactbadge_contact"
                android:background="#7000">

            <TextView
                    android:id="@+id/aftercall_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="6"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />

            <TextView
                    android:id="@+id/aftercall_txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(381) 22 2819254"
                    android:textColor="#CCC"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

        </LinearLayout>


    </RelativeLayout>
    <EditText
            android:layout_weight="0.65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="left|top"
            android:hint="Enter text here"
            />






</LinearLayout>